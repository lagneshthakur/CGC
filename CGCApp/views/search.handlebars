<h2 class="page-header">Search</h2>
<div ng-controller="UserCtrl">
  <div class="container">
    <form ng-submit="searchUser()">
      <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" ng-model="email" placeholder="Email">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
      <div id="followed"></div>

    </form>
  </div>
  <br>
  <div ng-if="search_user" class="container">
          <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">{[{search_user.name.first}]} {[{search_user.name.last}]}</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-3 col-lg-3 " align="center"> <img style="height: 100px;width: 100px;" src="" alt="User Pic" class="img-circle img-responsive"> </div>
                  <div class=" col-md-9 col-lg-9 "> 
                    <table class="table table-user-information">
                      <tbody>
                        <tr>
                          <td>Date Of Birth:</td>
                          <td>{[{dob}]}</td>
                        </tr>
                        <tr>
                          <td>Email:</td>
                          <td>{[{search_user.email}]}</td>
                        </tr>
                        <tr>
                          <td>Followers:</td>
                          <td>{[{search_user.follower.length}]}</td>
                        </tr>                     
                      </tbody>
                    </table>
                    <input type="button" ng-click="followUser('{{user._id}}',search_user._id)" class="btn btn-primary" value="Follow">
                    <input type="button" ng-click="unfollowUser('{{user._id}}',search_user._id)" class="btn btn-primary" value="Unfollow">
                    <!-- <a href="#" class="btn btn-primary">Team Sales Performance</a> -->
                  </div>
                </div>
              </div>
